  # More Info See: http://docs.vagrantup.com/v2/provisioning/ansible.html
<% for machine in @machines %>
  # More Info See: http://docs.vagrantup.com/v2/provisioning/ansible.html
  config.vm.define :<%= machine["name"]%> do |<%= machine["name"]%>|
    <%= machine["name"]%>.vm.box = "<%= machine["url"]%>"
    
    # Create a private network, which allows host-only access to the machine
    # using a specific IP.
    <%= machine["name"]%>.vm.network :private_network, virtualbox__intnet: "<%= @intnetName %>"
    <%= machine["name"]%>.vm.hostname = "<%= machine["name"]%>"
    
    config.vm.provider :virtualbox do |vb|
      vb.name = "<%= machine["name"]%>"
      # vb.customize ["modifyvm", :id, "--memory", "1024"]
      # vb.customize ["modifyvm", :id, "--cpus", "2"]
    end
